@page "/categoria"
@attribute [Authorize]
<h3>Area de Categorias</h3>

<div class="container-fluid">

    <form class="user">
        <div class="form-group row">
            <div class="col-sm-12 mb-3 mb-sm-0">
                <input disabled type="text" class="form-control form-control-user" id="catName" placeholder="Ingrese Nombre ..." onkeypress="return soloLetras(event)">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12 mb-3 mb-sm-0">
                <input disabled type="text" class="form-control form-control-user" id="catDescription" placeholder="Ingrese Descripción ...">
            </div>
        </div>
        <a id="btnUpdate" class="btn btn-primary btn-user btn-block text-white">Modificar Categoría</a>
        <hr>
    </form>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Acción</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>Tabletas</td>
                        <td>forma farmaceutica administracion oral</td>
                        <td>
                            <a href="" class="btn btn-success">Editar</a>
                            <a href="" class="btn btn-danger">Borrar</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>


