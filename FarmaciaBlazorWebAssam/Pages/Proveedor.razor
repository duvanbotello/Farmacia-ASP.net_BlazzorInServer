@page "/proveedor"
@attribute [Authorize]
<h3>Area de de proveedores</h3>
<div class="container-fluid">

    <form class="user">
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input disabled type="text" class="form-control form-control-user" id="proNit" placeholder="Ingrese Nit" onkeypress="return soloNumeros(event)">
            </div>
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input disabled type="text" class="form-control form-control-user" id="proName" placeholder="Nombre" onkeypress="return soloLetras(event)">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input disabled type="text" class="form-control form-control-user" id="proDes" placeholder="Descripción">
            </div>
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input disabled type="text" class="form-control form-control-user" id="proEmail" placeholder="Correo Electrónico" onkeypress="return soloNumeros(event)">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12 mb-3 mb-sm-0">
                <input disabled type="text" class="form-control form-control-user" id="proLoc" placeholder="Ubicación">
            </div>
        </div>
        <a id="btnProveedor" class="btn btn-primary btn-user btn-block text-white">Modificar Proveedor</a>
        <hr>


    </form>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Nit</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Correo</th>
                        <th>Acción</th>
                    </tr>
                </thead>
              
              
                <tbody>
                    <tr>
                        <td>944548549</td>
